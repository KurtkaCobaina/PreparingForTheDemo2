<Window x:Class="ArendWpfApp.ClientsUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArendWpfApp"
        mc:Ignorable="d"
        Title="ClientsUpdateWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer  Grid.Column="0">
            <StackPanel>
                <Label FontSize="24" Content="Добавление Клиента"/>
                <Label Content="Имя"/>
                <TextBox Text="{Binding Imya}"/>
                <Label Content="Фамилия"/>
                <TextBox Text="{Binding Familya}"/>
                <Label Content="Отчество"/>
                <TextBox Text="{Binding Otchestvo}"/>
                <Label Content="Серия паспорта"/>
                <TextBox Text="{Binding PasportSeria}"/>
                <Label Content="Номер паспорта"/>
                <TextBox Text="{Binding PasportNumber}"/>
                <Label Content="Номер ВУ"/>
                <TextBox Text="{Binding NomerVU}"/>
                <Label Content="Контаетный номер"/>
                <TextBox Text="{Binding KontaktniiTelephon}"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel  Grid.Column="1">
            <Button Content="Сохранить" x:Name="SaveChangesButton" Click="SaveChangesButton_Click"/>
            <Button Content="Назад" x:Name="BackButton" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
