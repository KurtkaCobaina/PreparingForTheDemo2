<Window x:Class="ArendWpfApp.SkidkiAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArendWpfApp"
        mc:Ignorable="d"
        Title="SkidkiAddWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer  Grid.Column="0">
            <StackPanel>
                <Label FontSize="24" Content="Добавление скидки"/>
                <Label Content="Название"/>
                <TextBox Text="{Binding Nazvanie}"/>
                <Label Content="Скидка в процентах"/>
                <TextBox Text="{Binding SkidkaVProcentah}"/>
                <Label Content="Доп условия"/>
                <TextBox Text="{Binding DopolnitelnieUsloviya}"/>
                

            </StackPanel>
        </ScrollViewer>
        <StackPanel  Grid.Column="1">
            <Button Content="Сохранить" x:Name="SaveChangesButton" Click="SaveChangesButton_Click"/>
            <Button Content="Назад" x:Name="BackButton" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
