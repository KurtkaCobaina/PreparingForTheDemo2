<Window x:Class="ArendWpfApp.ManagerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArendWpfApp"
        mc:Ignorable="d"
        Title="ManagerProfileWindow" Height="450" Width="800"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
            <Label FontSize="24" Content="Профиль"/>
            <Label Content="Логин"/>
            <TextBox Text="{Binding Login}"/>
            <Label Content="Пароль"/>
            <TextBox Text="{Binding Parol}"/>
            <Label Content="Имя"/>
            <TextBox Text="{Binding Imya}"/>
            <Label Content="Фамилия"/>
            <TextBox Text="{Binding Familya}"/>
            <Label Content="Отчество"/>
            <TextBox Text="{Binding Otchestvo}"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
            <Button Content="Сохранить" x:Name="SaveChangesButton" Click="SaveChangesButton_Click"/>
            <Button Content="Назад" x:Name="BackButton" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
