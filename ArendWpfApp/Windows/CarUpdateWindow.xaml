<Window x:Class="ArendWpfApp.CarUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArendWpfApp"
        mc:Ignorable="d"
        Title="CarUpdateWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer  Grid.Column="0">
            <StackPanel>
                <Label FontSize="24" Content="Изменение ТС"/>
                <Label Content="Номер тс"/>
                <TextBox Text="{Binding RegNomerTS}"/>
                <Label Content="Ид марки"/>
                <TextBox Text="{Binding IdMarka}"/>
                <Label Content="Ид модели"/>
                <TextBox Text="{Binding IdModel}"/>
                <Label Content="Ид тип кузова"/>
                <TextBox Text="{Binding IdTipKuzova}"/>
                <Label Content="Ид трансмисии"/>
                <TextBox Text="{Binding IdTransmisii}"/>
                <Label Content="Количество дверей"/>
                <TextBox Text="{Binding KolichestvoDverei}"/>
                <Label Content="Ид бензина"/>
                <TextBox Text="{Binding IdTipBenzina}"/>
                <Label Content="Год выпуска"/>
                <TextBox Text="{Binding GodVipuska}"/>
                <Label Content="Пробег"/>
                <TextBox Text="{Binding Probeg}"/>
                <Label Content="Стоимость за сутки"/>
                <TextBox Text="{Binding StoimostZaSutki}"/>
                <Label Content="Стоимость за час"/>
                <TextBox Text="{Binding StoimostZaChas}"/>

            </StackPanel>
        </ScrollViewer>
        <StackPanel  Grid.Column="1">
            <Button Content="Сохранить" x:Name="SaveChangesButton" Click="SaveChangesButton_Click"/>
            <Button Content="Назад" x:Name="BackButton" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
