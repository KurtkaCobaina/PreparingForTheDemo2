<Window x:Class="ArendWpfApp.CarsShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArendWpfApp"
        mc:Ignorable="d"
        Title="CarsShowWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Width" Value="100"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="BackButton" Content="Назад" Click="BackButton_Click"/>
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="ShowDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Рег номер" Binding="{Binding RegNomerTS}"/>
                    <DataGridTextColumn Header="Марка" Binding="{Binding Marka.Nazvanie}"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding Model.Nazvanie}"/>
                    <DataGridTextColumn Header="Тип кузова" Binding="{Binding TipKuzova.Nazvanie}"/>
                    <DataGridTextColumn Header="Тип трансмисии" Binding="{Binding TipKPP.Nazvanie}"/>
                    <DataGridTextColumn Header="Количество дверей" Binding="{Binding KolichestvoDverei}"/>
                    <DataGridTextColumn Header="Тип бензина" Binding="{Binding TipBenzina.Nazvanie}"/>
                    <DataGridTextColumn Header="Год выпуска" Binding="{Binding GodVipuska}"/>
                    <DataGridTextColumn Header="Пробег" Binding="{Binding Probeg}"/>
                    <DataGridTextColumn Header="Стоимость в сутки" Binding="{Binding StoimostZaSutki}"/>
                    <DataGridTextColumn Header="Стоимость в час" Binding="{Binding StoimostZaChas}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
                <Button Content="Добавить" x:Name="AddButton" Click="AddButton_Click"/>
                <Button Content="Изменить" x:Name="EditButton" Click="EditButton_Click"/>
                <Button Content="Удалить" x:Name="DeleteButton" Click="DeleteButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
